{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "beer-list/beverage-filter",
	"version": "1.0.0",
	"title": "Beverage Filter",
	"category": "widgets",
	"icon": "filter",
	"description": "Standalone filter controls for a Beverage List block on the same page.",
	"supports": {
		"html": false,
		"align": [ "wide", "full" ],
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"attributes": {
		"showSearch": {
			"type": "boolean",
			"default": true
		},
		"showTypeFilter": {
			"type": "boolean",
			"default": true
		}
	},
	"textdomain": "beer-list",
	"editorScript": "file:../../../build/blocks/beverage-filter/index.js",
	"editorStyle": "file:../../../build/blocks/beverage-filter/index.css",
	"style": "file:../../../build/blocks/beverage-filter/style-index.css",
	"render": "file:./render.php"
}
